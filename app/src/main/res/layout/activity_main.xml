<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"> <!--IMPORTANT otherwise background img. will not fill the whole screen -->

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/grey"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		tools:context=".MainActivity">

		<TextView
			android:id="@+id/textInfo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/marginTop"
			android:text="@string/textInfo"
			android:textSize="@dimen/textSize" />

		<LinearLayout
			android:id="@+id/rowPullUp1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/textPullUp1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/textSize"
				tools:text="02:50" />

			<Button
				android:id="@+id/buttonPullUpStart1"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_start" />

			<Button
				android:id="@+id/buttonPullUpStop1"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_stop"
				android:visibility="invisible"
				tools:visibility="visible" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/rowPullUp2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin"
			android:gravity="center_vertical">

			<TextView
				android:id="@+id/textPullUp2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/textSize"
				tools:text="02:50" />

			<Button
				android:id="@+id/buttonPullUpStart2"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_start" />

			<Button
				android:id="@+id/buttonPullUpStop2"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_stop"
				android:visibility="invisible"
				tools:visibility="visible" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/rowPress1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin"
			android:gravity="center_vertical">

			<TextView
				android:id="@+id/textPress1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/textSize"
				tools:text="00:50" />

			<Button
				android:id="@+id/buttonPressStart1"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_start" />

			<Button
				android:id="@+id/buttonPressStop1"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_stop"
				android:visibility="invisible"
				tools:visibility="visible" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/rowPress2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin"
			android:gravity="center_vertical">

			<TextView
				android:id="@+id/textPress2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/textSize"
				tools:text="00:50" />

			<Button
				android:id="@+id/buttonPressStart2"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_start" />

			<Button
				android:id="@+id/buttonPressStop2"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_stop"
				android:visibility="invisible"
				tools:visibility="visible" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/rowBars1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin"
			android:gravity="center_vertical">

			<TextView
				android:id="@+id/textBars1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/textSize"
				tools:text="01:50" />

			<Button
				android:id="@+id/buttonBarsStart1"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_start" />

			<Button
				android:id="@+id/buttonBarsStop1"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_stop"
				android:visibility="invisible"
				tools:visibility="visible" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/rowBars2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin"
			android:gravity="center_vertical">

			<TextView
				android:id="@+id/textBars2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/textSize"
				tools:text="01:50" />

			<Button
				android:id="@+id/buttonBarsStart2"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_start" />

			<Button
				android:id="@+id/buttonBarsStop2"
				android:layout_width="@dimen/buttonSize"
				android:layout_height="@dimen/buttonSize"
				android:layout_marginStart="@dimen/margin"
				android:background="@drawable/ic_stop"
				android:visibility="invisible"
				tools:visibility="visible" />
		</LinearLayout>

		<Button
			android:id="@+id/buttonStopAll"
			android:layout_width="@dimen/buttonSizeBig"
			android:layout_height="@dimen/buttonSizeBig"
			android:layout_marginTop="@dimen/margin"
			android:background="@drawable/ic_stop"
			android:onClick="stopTimers" />
	</LinearLayout>
</ScrollView>